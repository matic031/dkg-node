# Copy this file to .env.medsy and fill in your DKG_PUBLISH_WALLET

# Database Configuration
MEDSY_DATABASE_PATH="../../apps/medsy.db"

# DKG Configuration
# DKG endpoint and blockchain network
MEDSY_DKG_ENDPOINT="https://v6-pegasus-node-02.origin-trail.network:8900"
MEDSY_DKG_BLOCKCHAIN="otp:20430"

# RPC endpoint for blockchain interactions
DKG_BLOCKCHAIN_RPC="https://lofar-testnet.origin-trail.network"

# DKG Publishing parameters
MEDSY_DKG_EPOCHS_NUM="3"
MEDSY_DKG_MIN_CONFIRMATIONS="1"
MEDSY_DKG_MIN_REPLICATIONS="1"

# Guardian Social Graph Configuration
# Endpoint for querying the Guardian social graph for health claims
GUARDIAN_DKG_ENDPOINT="https://euphoria.origin-trail.network/dkg-sparql-query"

# Wallet Configuration for CLI/Standalone Usage
# Private key for wallet used to publish assets and execute blockchain transactions
# Required for agent-to-agent CLI flows and standalone mode
DKG_PUBLISH_WALLET="your_private_key_here"

# TRAC token contract address
MEDSY_TRAC_TOKEN_ADDRESS="0xFfFFFFff00000000000000000000000000000001"

# NEURO token address (optional)
MEDSY_NEURO_TOKEN_ADDRESS=""
MEDSY_MINIMUM_STAKE="1.0"
MEDSY_REWARD_MULTIPLIER="1.0"

# Payment Configuration
MEDSY_PAYMENT_ENABLED="true"
MEDSY_STABLECOIN_ADDRESS="0xA0b86a33E6441e88C5F2712C3E9b74F5b6c6C6b7"
# Minimum payment amount in stablecoin for micropayments
MEDSY_MICROPAYMENT_THRESHOLD="0.01"

# Workflow Timeouts (in milliseconds)
# Set to 0 to disable timeout for specific operation
# MEDSY_TIMEOUT_AI_ANALYSIS="60000"
# MEDSY_TIMEOUT_DKG_PUBLISH="0"
# MEDSY_TIMEOUT_TOKEN_STAKE="60000"
# MEDSY_TIMEOUT_TOTAL_WORKFLOW="240000"
